<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outer_ll_mood_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.onurb.musicrecommender.MoodSelectActivity">

    <LinearLayout
        android:id="@+id/headline_ll_ms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.35"
        android:background="#1D3557">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Your Mood !"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1_ms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#7F96FF">
        <LinearLayout
            android:id="@+id/ll1_1_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_1_1_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:src="@drawable/happy_n_mood_ic_100"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Happy"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1_2_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_1_2_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/calm_mood_ic_96"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Calm"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1_3_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_1_3_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/loving_mood_ic_96"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Loving"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll2_ms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#7F96FF">
        <LinearLayout
            android:id="@+id/ll2_1_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_2_1_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/alone_mood_ic_90"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Alone"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2_2_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_2_2_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/energetic_mood_ic_100"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Energetic"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2_3_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_2_3_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/melancholy_mood_ic_90"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Melancholy"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll3_ms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="#7F96FF">
        <LinearLayout
            android:id="@+id/ll_3_1_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_3_1_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/nostalgic_mood_ic_90"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Nostalgic"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3_2_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_3_2_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/annoyed_mood_ic_96"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Aggressive"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3_3_ms"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <ImageView
                android:id="@+id/mood_3_3_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/night_mood_ic_90"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:text="Night"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
